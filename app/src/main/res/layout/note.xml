<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp">

            <TextView
                android:id="@+id/note_no"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:fontFamily="monospace"
                android:rotationX="0"
                android:rotationY="28"
                android:text="@string/no"
                android:textAlignment="center"
                android:textStyle="bold"
                android:background="#DD9F9F"
                android:shadowColor="#6B0000FF"
                android:shadowDx="5.0"
                android:shadowDy="4.0"
                android:shadowRadius="1.5"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/guideline2"
                app:layout_constraintTop_toTopOf="parent"
                />

            <TextView
                android:id="@+id/note_topic"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="#35984B"
                android:padding="4dp"
                android:gravity="center"
                android:text="topic"
                android:textSize="16sp"
                android:textColor="#8F0022FF"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/guideline2"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="74dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/note_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="time"
            android:textSize="10sp"
            android:textAlignment="center"
            android:textColor="#E3931C"/>

        <TextView
            android:id="@+id/note_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="@string/app_name"
            android:textSize="14sp"
            android:textColor="#7E44608F"
            android:background="@drawable/bg_border"
            android:lines="1"
            android:ellipsize="end"/>

    </LinearLayout>

</LinearLayout>