<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.WeatherFragment">

    <TextView
        android:id="@+id/City"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fda2"
        android:gravity="center"
        android:text="城市"
        android:textColor="#345678"
        android:textSize="38sp"
        android:textStyle="bold" />

    <!-- 设置分割线 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#345678" />
    <LinearLayout
        android:id="@+id/weather_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|top"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/currentWeatherIcon"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="200dp"
            android:gravity="left"
            android:src="@drawable/yangsha" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="200dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/currentWeather"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="@string/qing"
                android:textColor="#345678"
                android:textSize="38sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/currentTemperature"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:gravity="center"
                android:lineSpacingExtra="8sp"
                android:text="18℃"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#06188F"
                android:textSize="96sp"
                android:textStyle="bold" />

        </LinearLayout>



    </LinearLayout>

    <!-- 设置分割线 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#dce5" />

    <LinearLayout
        android:id="@+id/weatherForecast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/dailyForecastInfoList1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/dailyForecastInfoList1_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/qing" />

            <TextView
                android:id="@+id/dailyForecastInfoList1_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:text="今天·"
                android:textColor="#345678"
                android:textSize="38sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dailyForecastInfoList1_weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:text="@string/qing"
                android:textColor="#345678"
                android:textSize="38sp"
                android:textStyle="bold" />

            <View
                android:layout_width="20dp"
                android:layout_height="match_parent" />


            <TextView
                android:id="@+id/dailyForecastInfoList1_temperature"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:gravity="center"
                android:text="25°/15°"
                android:textColor="@android:color/holo_blue_bright"
                android:textSize="25sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- 设置分割线 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#345678" />

        <LinearLayout
            android:id="@+id/dailyForecastInfoList2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/dailyForecastInfoList2_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/qing" />

            <TextView
                android:id="@+id/dailyForecastInfoList2_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:text="明天·"
                android:textColor="#345678"
                android:textSize="38sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dailyForecastInfoList2_weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:text="@string/qing"
                android:textColor="#345678"
                android:textSize="38sp"
                android:textStyle="bold" />

            <View
                android:layout_width="20dp"
                android:layout_height="match_parent" />


            <TextView
                android:id="@+id/dailyForecastInfoList2_temperature"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:gravity="center"
                android:text="25°/15°"
                android:textColor="@android:color/holo_blue_bright"
                android:textSize="25sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- 设置分割线 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#345678" />

        <LinearLayout
            android:id="@+id/dailyForecastInfoList3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/dailyForecastInfoList3_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/qing" />

            <TextView
                android:id="@+id/dailyForecastInfoList3_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:text="后天·"
                android:textColor="#345678"
                android:textSize="38sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dailyForecastInfoList3_weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:text="@string/qing"
                android:textColor="#345678"
                android:textSize="38sp"
                android:textStyle="bold" />

            <View
                android:layout_width="20dp"
                android:layout_height="match_parent" />


            <TextView
                android:id="@+id/dailyForecastInfoList3_temperature"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:gravity="center"
                android:text="25°/15°"
                android:textColor="@android:color/holo_blue_bright"
                android:textSize="25sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>


    <!-- 设置分割线 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#dce5" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/weeklyForecastInfoList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>